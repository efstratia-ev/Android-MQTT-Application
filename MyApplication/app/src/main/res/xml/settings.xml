<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="Settings">
    <PreferenceCategory xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:title="MQTT Broker">
        <EditTextPreference
                android:key="IP"
                android:title="IP address"
                app:useSimpleSummaryProvider="true"
                android:defaultValue="192.168.1.12"
        />
        <EditTextPreference
                android:key="Port"
                android:title="Port"
                app:useSimpleSummaryProvider="true"
                android:inputType="number"
                android:defaultValue="1883"
        />
    </PreferenceCategory>

    <PreferenceCategory xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:title="Outgoing Settings">
        <EditTextPreference
                android:key="Measurements"
                android:title="Sending Time"
                android:dialogTitle="Sending Time(seconds)"
                app:useSimpleSummaryProvider="true"
                android:inputType="number"
        />
    </PreferenceCategory>

</PreferenceScreen>