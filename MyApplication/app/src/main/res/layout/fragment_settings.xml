<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment" android:layout_below="@id/IP">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editIP" android:layout_below="@id/IP" android:layout_marginTop="7dp"/>
    <TextView
            android:text="IP address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/IP"/>
    <TextView
            android:text="Port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/port" android:layout_below="@id/editIP"
            android:layout_marginTop="36dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editPort" android:layout_below="@id/port" android:layout_marginTop="-2dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submit" android:layout_below="@id/editPort"
            android:layout_marginTop="33dp"/>
</RelativeLayout>